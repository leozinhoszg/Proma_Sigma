# Configuracoes do MongoDB
MONGODB_URI=mongodb://localhost:27017/controle_contratos

# Porta do servidor (usar 3001 para desenvolvimento, frontend usa 3000)
PORT=3001

# Ambiente
NODE_ENV=development

# JWT Configuration
JWT_ACCESS_SECRET=sua_chave_secreta_access_token
JWT_REFRESH_SECRET=sua_chave_secreta_refresh_token
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# SMTP Configuration
SMTP_ENABLE=true
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=seu_email@empresa.com
SMTP_USER_EMAIL=seu_email@empresa.com
SMTP_PASS=sua_senha_smtp

# Frontend URL (para links nos emails)
FRONTEND_URL=http://localhost:3000

# Security
REQUIRE_EMAIL_VERIFICATION=false
